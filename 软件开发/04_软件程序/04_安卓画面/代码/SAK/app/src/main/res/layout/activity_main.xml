<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mode_layout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toStartOf="@+id/step_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/main_moshi_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="运行模式"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.huaxin.wangshen.sak.RunViews.DropDownView.DropDownView
            android:id="@+id/main_moshibtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            app:layout_constraintStart_toEndOf="@+id/main_moshi_label"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bin.david.form.core.SmartTable
            android:id="@+id/mode_table"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/main_moshibtn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mode_table" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="上一步:"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/mode_table" />

        <TextView
            android:id="@+id/main_last_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="扫码工单号记录"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="300dp"
            android:gravity="center"
            android:text="当前步骤:"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="@+id/main_last_label" />

        <TextView
            android:id="@+id/main_this_label"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="取面板外观检查"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="下一步:"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toStartOf="@+id/main_next_label"
            app:layout_constraintTop_toTopOf="@+id/main_this_label" />

        <TextView
            android:id="@+id/main_next_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="贴双面胶1-4"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textView18"
            app:layout_constraintEnd_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/mode_table" />

        <TextView
            android:id="@+id/main_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="当前步骤标准时间(秒)20"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/main_timelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="当前步骤实际用时(秒)0"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/main_time_left"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/main_chanpin"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:text="产品模式"
            app:layout_constraintEnd_toEndOf="@+id/main_moshibtn"
            app:layout_constraintStart_toStartOf="@+id/main_moshibtn"
            app:layout_constraintTop_toBottomOf="@+id/main_moshibtn" />

        <TextView
            android:id="@+id/main_yunxing"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:text="运行模式"
            app:layout_constraintEnd_toEndOf="@+id/main_chanpin"
            app:layout_constraintStart_toStartOf="@+id/main_chanpin"
            app:layout_constraintTop_toBottomOf="@+id/main_chanpin" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/step_layout"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.bin.david.form.core.SmartTable
            android:id="@+id/step_table"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/main_hide"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="500dp"
            android:background="@drawable/hidetemp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/step_table"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:text="作业员:"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/step_table"
            app:layout_constraintStart_toEndOf="@+id/main_hide" />

        <TextView
            android:id="@+id/main_zuoyeyuan_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="13dp"
            android:text="Admin"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="编号:"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/main_zuoyeyuan_name"
            app:layout_constraintStart_toEndOf="@+id/main_zuoyeyuan_name"
            app:layout_constraintTop_toTopOf="@+id/main_zuoyeyuan_name" />

        <TextView
            android:id="@+id/main_bianhao_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="00001"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/status_layout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/show_layout"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:text="进度:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
            android:id="@+id/speed_bar"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:zpb_pb_color="@android:color/holo_green_dark"
            app:zpb_bg_color="@android:color/darker_gray"
            app:zpb_show_mode="rect"
            app:zpb_round_rect_radius="0dp"
            app:zpb_max="100"
            app:layout_constraintBottom_toBottomOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/button2"
             />

        <Button
            android:id="@+id/main_stop"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_bg"
            android:text="停止"
            app:layout_constraintBottom_toBottomOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/speed_bar"
            app:layout_constraintTop_toTopOf="@+id/button2" />

        <Button
            android:id="@+id/main_back"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/edit_bg"
            android:text="上一步"
            app:layout_constraintBottom_toBottomOf="@+id/main_stop"
            app:layout_constraintStart_toEndOf="@+id/main_stop"
            app:layout_constraintTop_toTopOf="@+id/main_stop" />

        <Button
            android:id="@+id/main_start"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edit_bg"
            android:text="启动"
            app:layout_constraintBottom_toBottomOf="@+id/main_back"
            app:layout_constraintStart_toEndOf="@+id/main_back"
            app:layout_constraintTop_toTopOf="@+id/main_back" />

        <Button
            android:id="@+id/main_next"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edit_bg"
            android:text="下一步"
            app:layout_constraintBottom_toBottomOf="@+id/main_start"
            app:layout_constraintStart_toEndOf="@+id/main_start"
            app:layout_constraintTop_toTopOf="@+id/main_start" />

        <Button
            android:id="@+id/main_loop"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edit_bg"
            android:text="循环OFF"
            app:layout_constraintBottom_toBottomOf="@+id/main_next"
            app:layout_constraintStart_toEndOf="@+id/main_next"
            app:layout_constraintTop_toTopOf="@+id/main_next" />

        <Button
            android:id="@+id/main_finishi"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edit_bg"
            android:text="返工完成"
            app:layout_constraintBottom_toBottomOf="@+id/main_loop"
            app:layout_constraintStart_toEndOf="@+id/main_loop"
            app:layout_constraintTop_toTopOf="@+id/main_loop" />

        <Button
            android:id="@+id/main_bottom_hide"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bottom_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/show_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/status_layout"
        app:layout_constraintEnd_toStartOf="@+id/step_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode_layout">

        <com.huaxin.wangshen.sak.RunViews.SplitLayout
            android:id="@+id/split_h_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:splitOrientation="horizontal">

            <com.huaxin.wangshen.sak.RunViews.SplitLayout
                android:id="@+id/split_img_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:splitHandleDrawable="@drawable/split_drawable"
                app:splitOrientation="vertical">

                <ImageView
                    android:id="@+id/part_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/lingjian" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:text="注意事项:"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_attention"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edit_bg"
                        android:text="1.按时发发呆哥的观点是公司符合规范积分工会文件"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        app:layout_constraintTop_toTopOf="@+id/textView" />
                </android.support.constraint.ConstraintLayout>
            </com.huaxin.wangshen.sak.RunViews.SplitLayout>

            <com.huaxin.wangshen.sak.RunViews.SplitLayout
                android:id="@+id/split_v_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:splitOrientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/main_show_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/cailiao_table"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="使用材料"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toTopOf="@+id/cailiao_table"
                        app:layout_constraintStart_toStartOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <com.huaxin.wangshen.sak.RunViews.SplitLayout
                    android:id="@+id/split_v_layout_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:splitOrientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/main_show_bottom_top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.bin.david.form.core.SmartTable
                            android:id="@+id/guige_table"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="使用工具规格"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toTopOf="@+id/guige_table"
                            app:layout_constraintStart_toStartOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/main_show_bottom_bottom_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/main_guige_l"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_bg"
                            android:text="电动螺丝刀"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/main_bianhao_l"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_bg"
                            android:text="2"
                            app:layout_constraintEnd_toEndOf="@+id/main_guige_l"
                            app:layout_constraintStart_toStartOf="@+id/main_guige_l"
                            app:layout_constraintTop_toBottomOf="@+id/main_guige_l" />

                        <TextView
                            android:id="@+id/main_name_l"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_bg"
                            android:text="2"
                            app:layout_constraintEnd_toEndOf="@+id/main_bianhao_l"
                            app:layout_constraintStart_toStartOf="@+id/main_bianhao_l"
                            app:layout_constraintTop_toBottomOf="@+id/main_bianhao_l" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="20dp"
                            android:text="工具规格名称"
                            android:textAlignment="textEnd"
                            app:layout_constraintBottom_toBottomOf="@+id/main_guige_l"
                            app:layout_constraintEnd_toStartOf="@+id/main_guige_l"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/main_guige_l"
                            app:layout_constraintVertical_bias="1.0" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text="程序编号"
                            android:textAlignment="textEnd"
                            app:layout_constraintBottom_toBottomOf="@+id/main_bianhao_l"
                            app:layout_constraintEnd_toEndOf="@+id/textView5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/main_bianhao_l" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text="程序名称"
                            android:textAlignment="textEnd"
                            app:layout_constraintBottom_toBottomOf="@+id/main_name_l"
                            app:layout_constraintEnd_toEndOf="@+id/textView6"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/main_name_l" />

                        <com.bin.david.form.core.SmartTable
                            android:id="@+id/shuju_table"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView7" />
                    </android.support.constraint.ConstraintLayout>


                </com.huaxin.wangshen.sak.RunViews.SplitLayout>

            </com.huaxin.wangshen.sak.RunViews.SplitLayout>

        </com.huaxin.wangshen.sak.RunViews.SplitLayout>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/main_bigimg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/lingjian"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/status_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>